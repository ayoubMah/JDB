{% extends 'base.html.twig' %}

{% block title %}Create New Admin{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Create New Admin</h1>
    {{ form_start(form) }}
    <div class="bg-white p-6 rounded-lg shadow-lg">
        {{ form_row(form.username, {'attr': {'class': 'border rounded w-full py-2 px-3 text-gray-700'}}) }}
        {{ form_row(form.password, {'attr': {'class': 'border rounded w-full py-2 px-3 text-gray-700'}}) }}
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" type="submit">Save</button>
        <a href="{{ path('app_admin_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mt-4">Back to list</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
